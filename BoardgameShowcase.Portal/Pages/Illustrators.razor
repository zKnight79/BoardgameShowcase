@attribute [Route(ROUTE)]

@using BoardgameShowcase.Model.Entity

<Heading3>
    Illustrators
</Heading3>

<ResponsiveContainer>
    <TableWidget>
        <TableHeader>
            <TableHeaderRow>
                <TableHeaderCell>
                    Illustrator ID
                </TableHeaderCell>
                <TableHeaderCell>
                    Name
                </TableHeaderCell>
                <TableHeaderCell>
                    Boardgames
                </TableHeaderCell>
            </TableHeaderRow>
        </TableHeader>
        <TableBody>
            @foreach (Illustrator illustrator in IllustratorList)
            {
                <IllustratorsTableRow @key="illustrator.UiId" Illustrator="illustrator" />
            }
        </TableBody>
    </TableWidget>
</ResponsiveContainer>