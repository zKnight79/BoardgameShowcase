@attribute [Route(ROUTE)]

@using BoardgameShowcase.Model.Entity

<Heading3>
    Publishers
</Heading3>

<ResponsiveContainer>
    <TableWidget>
        <TableHeader>
            <TableHeaderRow>
                <TableHeaderCell>
                    Publisher ID
                </TableHeaderCell>
                <TableHeaderCell>
                    Name
                </TableHeaderCell>
                <TableHeaderCell>
                    Boardgames
                </TableHeaderCell>
            </TableHeaderRow>
        </TableHeader>
        <TableBody>
            @foreach (Publisher publisher in PublisherList)
            {
                <PublishersTableRow @key="publisher.UiId" Publisher="publisher" />
            }
        </TableBody>
    </TableWidget>
</ResponsiveContainer>