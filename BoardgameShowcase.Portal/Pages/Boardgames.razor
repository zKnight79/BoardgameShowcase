@attribute [Route(ROUTE)]

@using BoardgameShowcase.Model.Entity

<Heading3>
    Boardgames
</Heading3>

<ResponsiveContainer>
    <TableWidget>
        <TableHeader>
            <TableHeaderRow>
                <TableHeaderCell>
                    Boardgame ID
                </TableHeaderCell>
                <TableHeaderCell>
                    Title
                </TableHeaderCell>
                <TableHeaderCell>
                    Author
                </TableHeaderCell>
                <TableHeaderCell>
                    Illustrator
                </TableHeaderCell>
                <TableHeaderCell>
                    Publisher
                </TableHeaderCell>
            </TableHeaderRow>
        </TableHeader>
        <TableBody>
            @foreach (Boardgame boardgame in BoardgameList)
            {
                <BoardgamesTableRow @key="boardgame.UiId" Boardgame="boardgame" />
            }
        </TableBody>
    </TableWidget>
</ResponsiveContainer>