@using BoardgameShowcase.Model.Entity

<TableBodyRow>
    <TableBodyCell CustomCssClass="whitespace-nowrap">
        <LinkWidget>
            @Boardgame.Id
        </LinkWidget>
    </TableBodyCell>
    <TableBodyCell CustomCssClass="whitespace-nowrap">
        @Boardgame.Title
    </TableBodyCell>
    <TableBodyCell CustomCssClass="whitespace-nowrap">
        @Author?.Name
    </TableBodyCell>
    <TableBodyCell CustomCssClass="whitespace-nowrap">
        @Illustrator?.Name
    </TableBodyCell>
    <TableBodyCell CustomCssClass="whitespace-nowrap">
        @Publisher?.Name
    </TableBodyCell>
</TableBodyRow>