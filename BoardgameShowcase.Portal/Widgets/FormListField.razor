@typeparam T

<label class="p-1 flex flex-wrap items-center">
    <span class="basis-full sm:basis-1/3 md:basis-1/4 lg:basis-1/5 p-1">
        @FieldLabel
    </span>
    <select multiple="@true"
            size="@OptionCount"
            disabled="@IsDisabled"
            class="basis-full sm:basis-2/3 md:basis-3/4 lg:basis-4/5 px-2 py-1 rounded-md border border-r-4 focus-visible:outline-none focus:ring-1 focus:ring-primary-lighter bg-transparent hover:bg-background/50 focus:bg-background border-primary/25 hover:border-primary/75 focus:border-primary"
            @bind="SelectedItems">
        @if (Options is not null)
        {
            @foreach (var option in Options.OrderBy(o => o.Value))
            {
                <option value="@option.Key">
                    @option.Value
                </option>
            }
        }
    </select>
</label>