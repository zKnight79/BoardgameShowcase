@attribute [Route(ROUTE)]

@using BoardgameShowcase.Model.Entity

<h3>Boardgames</h3>

<div class="overflow-x-auto shadow-lg">
    <table class="table-auto w-full">
        <thead>
            <tr>
                <th>
                    Boardgame ID
                </th>
                <th>
                    Title
                </th>
                <th>
                    Author
                </th>
                <th>
                    Illustrator
                </th>
                <th>
                    Publisher
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Boardgame boardgame in BoardgameList)
            {
                <BoardgamesTableRow @key="boardgame.UiId" Boardgame="boardgame" />
            }
        </tbody>
    </table>
</div>